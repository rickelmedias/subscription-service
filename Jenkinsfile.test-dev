pipeline {
    agent any
    
    tools {
        maven 'Maven-3.9'
        jdk 'JDK-17'
    }
    
    environment {
        QUALITY_GATE_THRESHOLD = 0.99
    }
    
    stages {
        stage('Checkout') {
            steps {
                echo 'üîÑ Clonando reposit√≥rio...'
                checkout scm
            }
        }
        
        stage('Build') {
            steps {
                echo 'üî® Compilando aplica√ß√£o...'
                sh 'mvn clean compile'
            }
        }
        
        stage('Unit Tests') {
            steps {
                echo 'üß™ Executando testes unit√°rios...'
                sh 'mvn test'
            }
            post {
                always {
                    junit '**/target/surefire-reports/*.xml'
                    archiveArtifacts artifacts: '**/target/surefire-reports/**', fingerprint: true
                }
            }
        }
        
        stage('Code Analysis - PMD') {
            steps {
                echo 'üîç An√°lise est√°tica de c√≥digo (PMD)...'
                sh 'mvn pmd:pmd'
            }
            post {
                always {
                    recordIssues(
                        enabledForFailure: true,
                        tools: [pmdParser(pattern: '**/target/pmd.xml')]
                    )
                    archiveArtifacts artifacts: '**/target/pmd.xml', fingerprint: true
                }
            }
        }
        
        stage('Code Coverage - JaCoCo') {
            steps {
                echo 'üìä Gerando relat√≥rio de cobertura...'
                sh 'mvn jacoco:report jacoco:check'
            }
            post {
                always {
                    jacoco(
                        execPattern: '**/target/jacoco.exec',
                        classPattern: '**/target/classes',
                        sourcePattern: '**/src/main/java',
                        inclusionPattern: '**/*.class',
                        exclusionPattern: '**/dto/**,**/config/**,**/SubscriptionApplication.class'
                    )
                    archiveArtifacts artifacts: '**/target/site/jacoco/**', fingerprint: true
                }
            }
        }
        
        stage('Quality Gate') {
            steps {
                script {
                    echo 'üéØ Verificando Quality Gate (99% de cobertura)...'
                    try {
                        sh 'mvn jacoco:check'
                        echo "‚úÖ Quality Gate PASSOU! Cobertura >= 99%"
                        env.QUALITY_GATE_PASSED = 'true'
                    } catch (Exception e) {
                        echo "‚ùå Quality Gate FALHOU! Cobertura abaixo de 99%"
                        env.QUALITY_GATE_PASSED = 'false'
                        currentBuild.result = 'UNSTABLE'
                    }
                }
            }
        }
    }
    
    post {
        always {
            echo 'üìã Relat√≥rios gerados:'
            echo '  - JUnit: target/surefire-reports/'
            echo '  - PMD: target/pmd.xml'
            echo '  - JaCoCo: target/site/jacoco/'
        }
        success {
            echo '‚úÖ Pipeline TEST-DEV executado com SUCESSO!'
        }
        failure {
            echo '‚ùå Pipeline TEST-DEV FALHOU!'
        }
    }
}

